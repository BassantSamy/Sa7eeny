<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout

android:layout_width="match_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_height="match_parent">


    <EditText
        android:id="@+id/TF_location"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription=" "
        android:ems="10"
        android:hint="Search Location"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/B_search"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/TF_location"
        android:onClick="onClick"
        android:text="Search" />

<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="560dp"
    tools:context=".MapsActivity"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/B_cafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TF_location"
        android:onClick="onClick"
        android:text="Coffee Shops" />

    <Button
        android:id="@+id/B_bakery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TF_location"
        android:layout_toEndOf="@+id/B_cafe"
        android:onClick="onClick"
        android:text="Bakeries" />

    <Button
        android:id="@+id/B_gym"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TF_location"
        android:layout_toEndOf="@+id/B_bakery"
        android:onClick="onClick"
        android:text="Gyms" />

    <Button
        android:id="@+id/B_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/B_gym"
        android:layout_toEndOf="@+id/B_gym"
        android:onClick="onClick"
        android:text="To" />


</RelativeLayout>